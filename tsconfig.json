{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2017",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["scripts/**", "node_modules/**"],
  "include": ["typings/*.d.ts", "src/**/*"]
}
